<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_empty_layout_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_home_empty_layout_error_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_error"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/activity_home_empty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_home_empty_layout_error_iv"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/activity_home_empty_layout_error"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:gravity="center"/>
</RelativeLayout>